# Build Options: define these either in environment or makefile
#
# define HAL_HW   to include the real HardWare interface into the HAL code
#

ifneq ($(DIAG_BUILD),)
LCDEFS += -DDIAG_BUILD
endif

# choose the right banshee silicon revision

LCDEFS += -DH3_B0

LCINCS  = -I$(BUILD_ROOT_SWLIBS)/include -I$(BUILD_ROOT)/h3/include

ifeq ($(KERNEL),)
PRIVATE_HEADERS=h3cinitdd.h modetabl.h plltable.h memtable.h
endif

HEADERS = h3cinit.h
CFILES  = h3cinit.c


INSTALL_DESTINATION = $(BUILD_ROOT)/h3

# targets
LIBRARIES= libh3cinit.a


LDIRT = 

include $(BUILD_ROOT_SWLIBS)/include/make/3dfx.linux.mak


